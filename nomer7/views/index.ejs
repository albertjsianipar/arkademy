<body>

    <div id="database-gudang">
        <div class="header">
            <h1 class="mt-5">Database Gudang</h1>
        </div>
        <div class="content">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category Name</th>
                        <th>Products</th>
                    </tr>
                </thead>
                <tbody>
                    <% groupResults.forEach(function(group){ %>
                    <tr>
                        <th scope="row">
                            <%= group.id %>
                        </th>
                        <td>
                            <%= group.category_name %>
                        </td>
                        <td>
                            <%= group.products %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

